extends layout

block content
    .container
        .navbar.navbar-default
            .container-fluid(ng-controller="mainMenuController")
                .navbar-header
                    button.navbar-toggle(type="button",ng-click="isCollapsed = !isCollapsed")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand Corbo

                .navbar-collapse(id="main-nav", collapse="isCollapsed")
                    ul.nav.navbar-nav
                        li
                            a(ng-click="addEvent()") New Event
                        li
                            a New Team Member
                        li
                            a View Team Members
                        li.dropdown(dropdown, on-toggle="toggled(open)")
                            a.dropdown-toggle(data-toggle="dropdown", role="button", dropdown-toggle) View Month
                                span.caret
                            ul.dropdown-menu(role="menu")
                                li(ng-repeat="month in months")
                                    a(ng-click="changeMonth()") {{month}}
                        li
                            a Manage Categories
    .jumbotron(ng-controller="calendarController")
        h1 {{newMonth}}
        .container(ng-repeat="event in events")
            p {{event.date[0]}} {{event.date[1]}}, {{event.date[2]}}  
            .container(ng-repeat="category in event.people")
                h3 {{category.category}}
                h4 {{category.name}}
