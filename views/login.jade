extends layout

block content
    .jumbotron.landing-page
        .container
            h1.text-center.main-title corbo
                span.glyphicon.glyphicon-apple
        .container.signup-form.col-centered
            form(action="/auth/login", method="POST").form.row
                .form-group
                    label(for="username")
                    input.form-control(type="text", name="username", placeholder="username...")
                .form-group
                    label(for="email")
                    input.form-control(type="text", name="password", placeholder="password...")
                .form-group.col-md-5
                    input.btn.btn-info(type="submit", value="Submit...")
        .container
            if error
                h3.text-center= error