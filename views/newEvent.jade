.modal-header
    h3.modal-title Create an Event
.modal-body
    form.form(novalidate)
        .form-group
            input(type="date", ng-model="event.date" required)
        .form-group(ng-repeat="(key, data) in categories")
            label(for="{{key}}", ng-model="event.people.category") {{key}}
            .checkbox(ng-repeat="name in data")
                label
                    input(type="checkbox", ng-model="event.people.name", value="{{name}}", required) 
                    {{name}}
.modal-footer
    button.btn.btn-primary.pull-left(ng-click="template()") save as template...
    button.btn.btn-info(ng-click="confirm()") save...
    button.btn.btn-default(ng-click="cancel()") cancel...