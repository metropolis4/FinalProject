.container
    .navbar.navbar-default
        .container-fluid(ng-controller="mainMenuController")
            .navbar-header
                button.navbar-toggle(type="button",ng-click="isCollapsed = !isCollapsed")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand Corbo
                    span.glyphicon.glyphicon-apple
            .navbar-collapse(id="main-nav", collapse="isCollapsed")
                ul.nav.navbar-nav
                    li
                        a(ng-click="openNewEvent()") New Event
                    li
                        a(ng-click="openNewMember()") New Team Member
                    li
                        a(ng-click="openViewMembers()") View Team Members
                    li.dropdown(dropdown, on-toggle="toggled(open)")
                        a.dropdown-toggle(data-toggle="dropdown", role="button", dropdown-toggle) View Month
                            span.caret
                        ul.dropdown-menu(role="menu")
                            li(ng-repeat="month in allMonths")
                                a(ng-click="changeMonth()") {{month | date: 'MMMM'}}
                    li
                        a(ng-click="openManageCategories()") Manage Categories
.container
    .jumbotron(ng-controller="calendarController")
        h1 {{newMonth | date: 'MMMM y'}}
        .container(ng-repeat="event in events | orderBy: 'date'")
            p {{event.date | date: 'MMMM d'}} 
            .container(ng-repeat="category in event.people")
                h3 {{category.category}}
                h4 {{category.name}}